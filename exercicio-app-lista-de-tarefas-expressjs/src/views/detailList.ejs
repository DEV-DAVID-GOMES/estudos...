<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/style.css">
    <title>Detalhe da lista</title>
</head>
<body class="bg-dark">
    <%- include('partials/header') %>
    <div class="container-fluid ps-5 pe-5 pt-5">
        <h1 class="text-white"><%= list.inputList %></h1>
            <form action="/addTask/<%= list.id %>" method="post" class="input-group d-flex mb-3">
                <input type="text" name="inputTask" id="inputTask" class="form-control bg-dark rounded-start text-white border border-secondary p-2" placeholder="Adicionar nova tarefa...">
                <button class="btn btn-primary rounded-end" type="submit">Adicionar</button>
            </form>
            <div class=" me-0 ps-0 rounded">
                <ul class="list-unstyled roundedListTask">
                    <% tasks.forEach(task => { %>
                        <li class="d-flex justify-content-between align-items-center border border-secondary text-white px-2 py-2 <%= task.selected ? 'completed' : 'notCompleted' %>">
                            <p class="m-0 ps-2"><%= task.inputTask %></p>
                            <% if(!task.selected) { %>
                            <form action="/completedTask/<%= task.id %>" method="post">
                                <button type="submit" class="btn btn-success py-1">
                                    Completar
                                </button>
                            </form>
                            <% } %>
                        </li>
                <% }) %>
                </ul>
            </div>
            
        <a href="/allList"><button class="text-white bg-primary rounded px-3 py-2 border-0">Voltar para todas as listas</button></a>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
</body>
</html>