<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/style.css">
    <title>Lista de tarefas</title>
</head>
<body class="bg-dark">
    <%- include('partials/header') %>
    <div class="container-fluid ps-5 pe-5 pt-5">
        <h1 class="text-white">Listas de Tarefas</h1>
        <ul class="me-0 ps-0">
            <% lists.forEach(list => { %>
                <li class="d-flex align-items-center justify-content-between border border-secondary rounded bg-dark text-white px-2 py-1 mb-2 position-relative">
                    <a href="/detailList/<%= list.id %>" class="stretched-link text-decoration-none text-white">
                        <p class="mb-0"><%= list.inputList %></p>
                    </a>
                    <form action="/listDelete<%= list.id %>" method="post">
                    <button type="submit" class="btn btn-danger px-2 py-1">Excluir</button>
                    </form>
                </li>
            <% }) %>
        </ul>
        <a href="/createList"><button class="text-white bg-primary rounded px-3 py-2 border-0">Nova Lista de Tarefas</button></a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
</body>
</html>